	&& echo "552cbaa25d948bc40aab58650a221e44c3cb655d7f949c47bafa1ae24c517108  go$GO_VERSION.linux-armv6hf.tar.gz" | sha256sum -c - \
	&& tar -xzf "go$GO_VERSION.linux-armv6hf.tar.gz" -C /usr/local/go --strip-components=1 \
	&& rm -f go$GO_VERSION.linux-armv6hf.tar.gz

